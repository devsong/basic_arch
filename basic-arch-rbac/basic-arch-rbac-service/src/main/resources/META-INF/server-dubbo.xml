<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans  
        http://www.springframework.org/schema/beans/spring-beans.xsd 
        http://dubbo.apache.org/schema/dubbo 
        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="rbac-service" owner="guanzhisong">
        <dubbo:parameter key="qos.enable" value="false" />
        <dubbo:parameter key="qos.accept.foreign.ip" value="false" />
        <dubbo:parameter key="qos.port" value="33333" />
    </dubbo:application>
    <dubbo:config-center address="${dubbo.zk.config-center}" />
    <dubbo:metadata-report address="${dubbo.zk.meta-center}" />
    <dubbo:registry id="register" address="${dubbo.zk.registry-center}" />
    <dubbo:protocol port="-1" threads="${dubbo.threads}" />
    <dubbo:provider timeout="${dubbo.timeout}" />
    
    <dubbo:service interface="com.gzs.learn.rbac.dubbo.DubboRbacAuthService" ref="dubboRbacAuthService" registry="register"
        retries="${dubbo.retries}" version="${dubbo.zk.version}" />

    <dubbo:service interface="com.gzs.learn.rbac.dubbo.DubboRbacMenuService" ref="dubboRbacMenuService" registry="register"
        retries="${dubbo.retries}" version="${dubbo.zk.version}" />

    <dubbo:service interface="com.gzs.learn.rbac.dubbo.DubboRbacUserService" ref="dubboRbacUserService" registry="register"
        retries="${dubbo.retries}" version="${dubbo.zk.version}" />

    <dubbo:service interface="com.gzs.learn.rbac.dubbo.DubboRbacRoleService" ref="dubboRbacRoleService" registry="register"
        retries="${dubbo.retries}" version="${dubbo.zk.version}" />

    <dubbo:service interface="com.gzs.learn.rbac.dubbo.DubboRbacDeptService" ref="dubboRbacDeptService" registry="register"
        retries="${dubbo.retries}" version="${dubbo.zk.version}" />

    <dubbo:service interface="com.gzs.learn.rbac.dubbo.DubboRbacCommonService" ref="dubboRbacCommonService"
        registry="register" retries="${dubbo.retries}" version="${dubbo.zk.version}" />

</beans>